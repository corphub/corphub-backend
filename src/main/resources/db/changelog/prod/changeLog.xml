<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="PeterA" id="createCategoryTable">
        <createTable tableName="category">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_category" />
            </column>
            <column name="name" type="varchar(64)" />
        </createTable>
        <createTable tableName="entry">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_entry" />
            </column>
            <column name="name" type="varchar(64)" />
            <column name="target" type="varchar(4096)" />
        </createTable>
        <createTable tableName="category_entry_link">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_category_entry_link" />
            </column>
            <column name="category" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_category_entry_link__category"
                             references="category(id)"/>
            </column>
            <column name="entry" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_category_entry_link__entry"
                             references="entry(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>